<article class="col-12 col-md-6 tm-post">
  <hr class="tm-hr-primary">
    <a href="<%= work %>" class="effect-lily tm-post-link tm-pt-60">
      <div class="tm-post-link-inner">
        <img src="<%= work.img %>" alt="Image" class="img-fluid">                            
      </div>
      <h2 class="tm-pt-80 tm-color-primary tm-post-title"><%= link_to work.name, work, :class => 'tm-color-primary' %> </h2>
    </a>                  
    <p class="tm-pt-30">
     <%= work.mini_desc %>
    </p>
    <div class="d-flex justify-content-between tm-pt-45">
      <span class="tm-color-primary"><a href="<%= work.link %>">Оставить заявку</a></span>
      <span class="tm-color-primary"><%= link_to "Подробнее", work, :class => 'tm-color-primary' %></span>
    </div>
    <hr>
    <div class="d-flex justify-content-between">
      <span><%= work.salary %></span>
      <span></span>
    </div>
</article>